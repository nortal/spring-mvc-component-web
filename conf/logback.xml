<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <appender name="CW-LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>E:/logs/framework/CW.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>UTF-8</charset>
            <Pattern>%d{HH:mm:ss.SSS} %5p %c{0}.%method\(%file:%line\) - %m%n</Pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <FileNamePattern>C:/logs/framework/log_archive/CW-app-%i.log.zip</FileNamePattern>
            <MinIndex>1</MinIndex>
            <MaxIndex>20</MaxIndex>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>10MB</MaxFileSize>
        </triggeringPolicy>

    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>UTF-8</charset>
            <pattern>%d{HH:mm:ss.SSS} %5p %c{0}.%method\(%file:%line\) - %m%n</pattern>
        </encoder>
    </appender>
  
    <logger name="org.springframework.jdbc.datasource" level="INFO" additivity="true">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="CW-LOG" />
    </logger>
    <logger name="org.springframework.cache" level="INFO" additivity="true">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="CW-LOG" />
    </logger>
    <logger name="org.springframework.web.servlet" level="INFO" additivity="true">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="CW-LOG" />
    </logger>
    <logger name="org.springframework.web" level="INFO" additivity="true">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="CW-LOG" />
    </logger>
    <logger name="org.springframework.security" level="INFO" additivity="true">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="CW-LOG" />
    </logger>

    <logger name="org.quartz" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="CW-LOG" />
    </logger>
	
	<logger name="org.apache.http.wire" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="CW-LOG" />
    </logger>

    <!-- Global Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="CW-LOG" /> 
    </root>

</configuration>